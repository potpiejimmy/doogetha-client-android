<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_item"
    >
    <ImageView android:layout_height="fill_parent"
    		   android:id="@+id/eventstateiconview"
    		   android:src="@android:drawable/btn_star" 
    		   android:layout_width="24dp"
    		   android:paddingLeft="3dp">
    </ImageView>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <LinearLayout android:layout_width="fill_parent" android:layout_height="10dip"/>
		<TextView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/eventitemdatetime"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:paddingLeft="5dip"
		    android:textSize="10sp"
		    android:textColor="#000"
		    android:text="eventitemdatetime">
	    </TextView>
		<TextView xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/eventitemname"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:paddingLeft="5dip"
		    android:paddingBottom="10dip"
		    android:textSize="18sp"
		    android:textColor="#000"
		    android:text="Ein tolles Event">
		</TextView>
	</LinearLayout>
</LinearLayout>
